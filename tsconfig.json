{
    "compilerOptions": {
        "target": "ESNEXT",
        "module": "commonjs",
        "plugins": [
            {
                "transform": "./transformers/simple-transformer.ts",
                "type": "raw",
                "after": false
            }
        ],
        "moduleResolution": "node",
        "declaration": false,
        "outDir": "dist",
        "rootDir": "./",
        "experimentalDecorators": true
    },
    "exclude": [
        "dist",
        "node_modules",
        "./transformers"
    ]
}